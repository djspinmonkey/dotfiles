#require "autotest/rails"
require "autotest/growl"
require "autotest/fsevent"
require "autotest/restart"
#require "redgreen/autotest"

Autotest::Growl::clear_terminal = false

custom_images = File.join(ENV['HOME'], "misc/autotest_pics/john")
Autotest::Growl::image_dir = custom_images if Dir.exist? custom_images

Autotest.add_hook :initialize do |autotest|
  %w{.git .svn .hg .DS_Store ._* vendor tmp log doc sample_tests}.each do |exception|
    autotest.add_exception(exception)
  end
end

